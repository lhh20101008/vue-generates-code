{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "compilerOptions": {
    "resolveJsonModule": false,
    "esModuleInterop": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "ignore",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "no-empty": false,
    "only-arrow-functions": false,
    "triple-equals": false,
    "prefer-for-of": false,
    "no-unused-expression": false,
    "variable-name": false,
    "no-console": false,
    "radix": false,
    "max-line-length": false,
    "max-classes-per-file": false,
    "prefer-const": false,
    "ban-comma-operator": false,
    "no-unbound-method": false,
    "semicolon": false,
    "no-var-requires": false,
    "forin": false,
    "jsdoc-format": false,
    "no-eval": false
  }
}
